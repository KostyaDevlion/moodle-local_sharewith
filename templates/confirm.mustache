{{!
    @template local_sharewith/confirm

    Confirm template.

    Context variables required for this template:
    * title - title of modal
    * text - body of modal

    Example context (json):
{
  "title": "Title",
  "text": "Text"
}

}}
  <div class="modal-header">
    <h5 class="modal-title">{{title}}</h5>
    <button id="confirmClose" type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
  </div>

  <div class="modal-body">
      <span>{{text}}</span>
  </div>

  <div class="modal-footer">
    <!-- <button class="btn btn-secondary" type="button" data-handler = "goBack">{{#str}}back, local_sharewith{{/str}}</button> -->
    <button class="btn btn-success" type="button" data-dismiss="modal">{{#str}}finish, local_sharewith{{/str}}</button>
  </div>

{{#js}}
require(['jquery'], function($) {
    setTimeout(function() {
      $('#confirmClose').trigger('click');
    }, 10000);
});
{{/js}}
