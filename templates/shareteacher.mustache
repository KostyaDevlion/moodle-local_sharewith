{{!
    @template local_sharewith/select_teacher

    Example context (json):
    {
        "activityid": "11",
        "activityname": "Quiz 1",
        "courseid": "2",
        "config": "",
        "teachers": [
            {
                "teacher_name": "Adam Smith",
                "teacher_url": "",
                "date": "01.01.1970",
                "time": "23:59"
            }
        ]
    }
}}
<div class="modal-header">
    <h5 class="modal-title">{{#str}}selectteacher, local_sharewith{{/str}}</h5>
    <button type="button" data-ref="close" class="close" data-dismiss="modal" aria-label="Close" id="yui_3_17_2_1_1569598769750_3060">
      <span aria-hidden="true">Ã—</span>
    </button>
</div>

<div class = "p-3">
    <div class = "tag-wrapper d-flex mb-2">
      <div class = "btn btn-outline-primary mr-2 d-none example" data-handler = "removeTag">
        <i class="icon fa fa-times"></i>
      </div>
    </div>
    <form class = "mb-4">
        <div class = "form-group d-flex flex-column position-relative">
            <label for="selectteacher" class="mb-0 alert-secondary border rounded-top p-1">{{#str}}share_with_teacher, local_sharewith{{/str}}</label>
            <input
                class = "form-control mb-0 border-top-0 w-100"
                type = "text"
                data-handler = "selectTeacher"
                data-placement = "top"
                data-trigger="manual"
                data-content = "{{#str}}enter_teacher_here, local_sharewith{{/str}}"
                placeholder="{{#str}}enter_teacher_here, local_sharewith{{/str}}">
            <ul class = "result-block d-none"></ul>
        </div>
        <div class = "form-group">
            <textarea id="message_for_teacher" class = "form-control" placeholder="{{#str}}comment_to_teacher, local_sharewith{{/str}}"></textarea>
        </div>
    </form>
    <div class = "form-group d-flex flex-column border rounded-top">
        <p class = "mb-0 alert-secondary border-bottom rounded-top p-1 px-2">{{#str}}teachers_youve_sent, local_sharewith{{/str}}</p>
        <div class="d-flex">
            {{#teachers}}
            <div class = "d-flex border border-secondary m-1 p-2">
                <div class = "sw-img">
                    <img src="{{#teacher_url}}{{teacher_url}}{{/teacher_url}}{{^teacher_url}}/theme/image.php/boost/core/1559478333/u/f2{{/teacher_url}}" alt="{{#str}}user_foto, local_sharewith{{/str}}">
                </div>
                <span class = "pl-2">{{teacher_name}}</span>
            </div>
            {{/teachers}}
            {{^teachers}}
            <div class = "mb-0 d-flex align-items-center p-2">{{#str}}nosharing, local_sharewith{{/str}}</div>
            {{/teachers}}
        </div>
    </div>
</div>

<div class="modal-footer">
  <button class="btn btn-secondary" type="button" data-handler = "goBack">{{#str}}back, local_sharewith{{/str}}</button>
  <button
      class = "btn btn-success"
      data-handler = "sendLinkToTeachers"
      type = "button"
      >
      <div id ="modalspinner" class="spinner-border spinner-border-sm d-none" role="status">
          <span class = "sr-only">loading...</span>
      </div>
      <span class = "spinner-loading">{{#str}}loading, local_sharewith{{/str}}</span>
      <span>{{#str}}send, local_sharewith{{/str}}</span>
    </button>
</div>
